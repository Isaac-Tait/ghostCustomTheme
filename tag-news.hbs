{{!< default}}

<div>
    <header class="header">
        <div class="header__nav">
            {{navigation type="secondary"}}
        </div>
    </header>
    <div class="page-width">
    {{#tag}}
        <div>
            <h1>{{ name }}</h1>
        </div>
    {{/tag}}
    
    <div class="posts">
        {{#foreach posts filter="published_at asc"}}
            <a href="{{url absolute="true"}}">
                {{title}}
            </a>
        {{/foreach}}
    </div>
</div>
</div>